{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Decision",
  "type": "object",
  "properties": {
    "decision": { "enum": ["ALLOW", "ASK", "DENY"] },
    "reason": { "type": "string" },
    "policy_id": { "type": ["string", "null"] },
    "policy_version": { "type": ["string", "null"] },
    "metadata": { "type": "object" }
  },
  "required": ["decision", "reason"]
}
